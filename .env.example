# JIVS IMP Migration Visual Companion - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port for the backend server (default: 9999)
PORT=9999

# Node environment (development, production, test)
NODE_ENV=development

# =============================================================================
# SECURITY
# =============================================================================

# JWT secret for authentication tokens
# Generate a secure random string for production
JWT_SECRET=your-secure-jwt-secret-here

# =============================================================================
# OPENAI CONFIGURATION (Optional)
# =============================================================================

# OpenAI API key for AI-powered predictions and visualizations
# Get your key from: https://platform.openai.com/api-keys
# Note: You can also configure this through the Settings page in the app
OPENAI_API_KEY=

# =============================================================================
# DATABASE (Optional - SQLite is used by default)
# =============================================================================

# Database path (default: ./data/database.sqlite)
# DB_PATH=./data/database.sqlite

# =============================================================================
# FRONTEND (Optional)
# =============================================================================

# API base URL for frontend (default: http://localhost:9999/api)
# VITE_API_URL=http://localhost:9999/api
